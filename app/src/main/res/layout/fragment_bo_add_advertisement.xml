<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A D D"
        android:textSize="18sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A D V E R T I S E M E N T"
        android:textSize="18sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give your business a boost"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/edittext_bg"
        android:backgroundTint="@color/white"
        android:layout_margin="30dp"
        android:padding="25dp"
        android:elevation="10dp">

        <EditText
            android:id="@+id/bo_ad_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="offer"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_bg" />

        <EditText
            android:id="@+id/bo_ad_tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tagline"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload images for your ad"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:weightSum="99"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bo_ad_img1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_add"
                android:background="@drawable/edittext_bg"
                android:layout_weight="30"
                android:layout_margin="5dp"
                android:elevation="3dp" />


            <ImageView
                android:id="@+id/bo_ad_img2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_add"
                android:layout_weight="30"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_bg"
                android:elevation="3dp" />

            <ImageView
                android:id="@+id/bo_ad_img3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_add"
                android:layout_weight="30"
                android:layout_margin="5dp"
                android:background="@drawable/edittext_bg"
                android:elevation="3dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/bo_ad_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="location"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:background="@drawable/edittext_bg" />

        <Button
            android:id="@+id/bo_ad_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:elevation="5dp"
            android:background="@color/teal_700_transparent" />

    </LinearLayout>

</LinearLayout>