<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:context=".AddGeofenceMap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/edittext_bg"
        android:elevation="20dp"
        android:gravity="center"
        android:layout_alignEnd="@id/map"
        android:layout_alignBottom="@id/map">

        <SeekBar
            android:id="@+id/radius_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/add_geofence"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/add_geofence"
            android:layout_weight="95"
            android:background="@color/light_grey"
            android:progress="100"
            android:max="2000"
            android:min="50" />


        <TextView
            android:id="@+id/radius_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="10dp"
            android:text="100m" />


        <ImageView
            android:id="@+id/add_geofence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_go"
            android:padding="20dp"
            android:layout_weight="2"
            android:background="@drawable/curved_rect"
            android:backgroundTint="@color/teal_700_transparent" />

    </LinearLayout>


</RelativeLayout>