<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_ad_container"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:minWidth="175dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:elevation="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_ad_offer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Offer"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintWidth_percent=".6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".3" />

        <TextView
            android:id="@+id/user_ad_tagline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Catchy Tagline for the ad"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_ad_offer"
            app:layout_constraintHorizontal_bias=".3"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".7" />

        <TextView
            android:id="@+id/user_ad_busName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias=".2"
            app:layout_constraintVertical_bias=".9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_ad_tagline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_ad_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>